<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <menuitem
            id="model_odometer_fleet"
            name="Consulta Auto"
            action="action_view_odometer_wizard"            
            parent="fleet.menu_root"
            groups="fleet.fleet_group_user"
            sequence="100"/>

            <record id="odometer_dates_wizard_form" model="ir.ui.view">
                <field name="name">odometer.fleet.wizard.form</field>
                <field name="model">odometer.fleet</field>
                <field name="arch" type="xml">
                    <form string="Consulta Odometro">
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="vehicle_id" domain="[('driver_id', '=', partner_id)]" />
                            </group>
                            
                        </group>
                         
                        
                        <footer>
                            <button 
                                name="call_api_odometer" 
                                string="Consulta odometro" 
                                type="object" 
                                class="oe_highlight"/>
    
                            <button 
                                string="Cancelar" 
                                class="btn btn-secondary" 
                                special="cancel" />
                        </footer>
                    </form>
                </field>
            </record>
    
            <record id="action_view_odometer_wizard" model="ir.actions.act_window">
                <field name="name">Consulta Odometro</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">odometer.fleet</field>
                <field name="view_mode">form</field>
                <field name="view_id" ref="odometer_dates_wizard_form"/>
                <field name="target">new</field>
        
            </record>
    </data>
    
    
</odoo>
