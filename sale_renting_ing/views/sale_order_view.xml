<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="sale_order_sale_renting_ing_inherit_form" model="ir.ui.view">
            <field name="name">sale.order.sale.renting.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='359']" position="after">
                    <button name="create_account" string="Factura Alquiler" type="object" class="btn-primary" attrs="{'invisible': [('is_rental_order', '=', False)]}"/>/>
                </xpath>
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="attach_1" string="Recibo entrega" widget="binary"/>
                    <field name="attach_1_fname" string="Recibo de entrega" invisible="1"/>

                </xpath>

            </field>
        </record>
        
    
    </data>
    

</odoo>
